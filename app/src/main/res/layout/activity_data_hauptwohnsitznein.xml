        <Button
            android:text="Weiter"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/button9"
            android:layout_weight="0.85"
            android:textSize="25sp"
            android:layout_marginLeft="0dp"
            android:onClick="dataInput7" />
